# Perplexity AI Configuration (Required for media analysis)
# Get your API key from: https://www.perplexity.ai/settings/api
# Perplexity provides real-time web access for accurate media content warnings
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Google OAuth Configuration (Required for Authentication)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Session Secret (Change in production!)
SESSION_SECRET=your-random-session-secret-here

# Base URL (Update for production deployment)
BASE_URL=http://localhost:5000

# TMDB API Configuration (Optional - for movie/show metadata)
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Database URL (Required)
DATABASE_URL=your-neon-database-connection-string-here

# Supabase Configuration (if using Supabase)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_URL=your_supabase_url_here

# Lyrics API Configuration (Optional - for music analysis)
LYRICS_API_KEY=your_lyrics_api_key_here
LYRICS_PROVIDER=musixmatch

# Make.com Webhook (Optional - for logging)
MAKE_WEBHOOK_URL=your_make_webhook_url_here
